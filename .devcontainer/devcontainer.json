// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
	"name": "Java",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	// "image": "mcr.microsoft.com/devcontainers/java:1-8-bullseye",
	"dockerComposeFile": "docker-compose.yml",
	"service": "dev0app0backend",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "mvn clean install -DskipTests ; mvn clean install -DskipTests ; bash postCreate.sh",
	// "postCreateCommand": " bash .devcontainer/postCreate.sh",
	// "postCreateCommand": " mvn install",
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root",
	"mounts": [
		{
			"source": "${localWorkspaceFolder}",
			"target": "/workspaces/${localWorkspaceFolderBasename}",
			"type": "bind"
		},
		{
			"source": "/${env:USER}/.m2/repository",
			"target": "/home/vscode/.m2/repository",
			"type": "bind"
		},
		// {
		// 	"source": "/var/run/docker.sock",
		// 	"target": "/var/run/docker.sock",
		// 	"type": "bind"
		// },
	],
	"runArgs": [
		// "--network",
		// "ytzivsxn0stack_backend",
		"--memory",
		"8g",
		// "-v",
		// "root/.m2/repository:/home/vscode/.m2/repository",
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"vmware.vscode-boot-dev-pack",
				"saoudrizwan.claude-dev",
				"vscjava.vscode-gradle"
			]
		}
	}
}